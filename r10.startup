/etc/init.d/networking restart

ip route add default via 151.0.45.0

iptables -t nat -A POSTROUTING -s 192.168.88.0/24 -j MASQUERADE

# 1) Permette traffico di ritorno
iptables -A FORWARD -m STATE --state ESTABLISHED,RELATED -j ACCEPT

# 2) Permette nuove connessioni dalla LAN
iptables -A FORWARD -s 192.168.88.0/24 -m state --state NEW -j ACCEPT

# 3) Blocca tutto il resto diretto alla LAN
iptables -A FORWARD -d 192.168.88.0/24 -m state --state NEW -j DROP